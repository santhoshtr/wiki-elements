# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# prettier custom things
quote_type = single
max_line_length = 120

[src/**.js]
indent_size = 4
indent_style = space
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
